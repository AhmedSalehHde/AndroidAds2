<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ads_single"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ah1.com.advertisements_v1.AdsSingleActivity">

    <LinearLayout
        android:layout_below="@+id/my_toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:background="@drawable/settin_img">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="9dp"
                android:layout_height="45dp">

                <TextView
                    android:text="مالك الاعلان"
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/adsSingleUser"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp" />

                <ImageView
                    app:srcCompat="@drawable/imge_sty"
                    android:id="@+id/adsSingleImageUser"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/adsSingleImage"
                android:layout_weight="0.23"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="عنوان الاعلان "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adsSingleTitle"
                android:textSize="25dp"
                android:textColor="#dc5f1b"
                />

            <TextView
                android:text="وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adsSingleDec"

                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/phone_icon"
                    android:id="@+id/imageView13"
                    android:layout_weight="1" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adsSingle_userphone"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/loaction_ico"
                    android:id="@+id/imageView14"
                    android:layout_weight="1" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adsSingle_userlocation"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="تعديل"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adsSingleModifyBu"
                    android:layout_weight="1"
                    android:background="@drawable/blue_btn_bkg"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:visibility="invisible"
                    />

                <Button
                    android:text="حذف "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adsSingleRemoveBu"
                    android:layout_weight="1"
                    android:background="#c40101"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:visibility="invisible"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/toolbar"
        android:id="@+id/my_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

