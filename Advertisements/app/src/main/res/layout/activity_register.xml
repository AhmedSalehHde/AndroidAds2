<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ah1.com.advertisements_v1.RegisterActivity"
    android:background="@drawable/bkg_login_img">

    <include layout="@layout/toolbar"
        android:id="@+id/my_toolbar"
        />

    <!-- Login progress -->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_toolbar">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="تسجيل حساب في اد وي"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:gravity="center"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_leftcorner_bkg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/user_ico" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="49dp"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView"
                            android:src="@drawable/asaad" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/password_ico" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/password_ico" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/phone_icon"
                            android:id="@+id/imageView3" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/whatsapp_ico"
                            android:id="@+id/imageView4" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <EditText
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:id="@+id/EditName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:background="?attr/colorControlHighlight"
                        android:ems="12"
                        android:hint=" ألاسم كامل"
                        android:inputType="textEmailAddress"
                        android:textSize="16dp"
                        android:layout_weight="0.35" />

                    <EditText
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:id="@+id/EditEmail"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:background="?attr/colorControlHighlight"
                        android:ems="10"
                        android:hint="ألبريد ألالكتروني"
                        android:inputType="textEmailAddress"
                        android:textSize="16dp"
                        android:layout_marginBottom="1dp" />

                    <EditText
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:id="@+id/EditPassword"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:background="?attr/colorControlHighlight"
                        android:ems="12"
                        android:hint="كلمة المرور"
                        android:inputType="textPassword"
                        android:textSize="16dp"
                        android:layout_weight="0.35" />
                    <EditText
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:id="@+id/EditePasswordSure"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:background="?attr/colorControlHighlight"
                        android:ems="12"
                        android:hint="تأكيد كلمة المرور"
                        android:inputType="textPassword"
                        android:textSize="16dp"
                        android:layout_weight="0.27" />

                    <EditText
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:id="@+id/EditPhone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:background="?attr/colorControlHighlight"
                        android:ems="10"
                        android:hint="رقم الهاتف"
                        android:textSize="16dp"
                        android:inputType="phone" />
                    <EditText
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:id="@+id/EditWhatsupNum"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:background="?attr/colorControlHighlight"
                        android:ems="10"
                        android:hint="رقم الوتساب"
                        android:textSize="16dp"
                        android:inputType="phone" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="331dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">

                <Button
                    android:id="@+id/buRegister"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/blue_btn_bkg"
                    android:text="أشــــــــــــتراك"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_weight="0.94" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
