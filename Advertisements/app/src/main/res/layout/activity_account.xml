<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ah1.com.advertisements_v1.AccountActivity"
    android:background="@drawable/backgrondapp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:text="إعدادت الحساب"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:gravity="center"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:padding="1dp"
                android:weightSum="1"
                android:background="@drawable/settin_img">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/ImageProfileUser"
                    android:foreground="@drawable/settin_img" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/edite_img"
                    android:id="@+id/buProfileImage"
                    android:background="@android:drawable/menuitem_background"
                    android:layout_marginBottom="1dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:srcCompat="@android:drawable/screen_background_light_transparent"
                    android:id="@+id/imageView17" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="right"
                android:background="?attr/colorControlHighlight"
                android:weightSum="1">

                <EditText
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/EditName"
                    android:hint="مستخدم اد وي"
                    android:layout_weight="0.99" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:srcCompat="@android:drawable/menuitem_background"
                    android:id="@+id/imageView19" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="right"
                android:background="?attr/colorControlHighlight"
                android:weightSum="1">

                <EditText
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/EditLocationUser"
                    android:hint="الموقع"
                    android:layout_weight="0.98" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:srcCompat="@android:drawable/menuitem_background"
                    android:id="@+id/imageView20" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="right"
                android:background="?attr/colorControlHighlight"
                android:weightSum="1">

                <EditText
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:id="@+id/EditPhone"
                    android:hint="رقم الهاتف"
                    android:layout_weight="0.99"
                    android:inputType="phone"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:srcCompat="@android:drawable/menuitem_background"
                    android:id="@+id/imageView21" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="right"
                android:background="?attr/colorControlHighlight"
                android:weightSum="1">

                <EditText
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:id="@+id/EditWhatsupNum"
                    android:hint="رقم الوتساب"
                    android:layout_weight="0.99"
                    android:inputType="phone"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:srcCompat="@android:drawable/menuitem_background"
                    android:id="@+id/imageView18" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <Button
                    android:text="عرض اعلاناتي"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buShowMyAds"
                    android:layout_weight="1"
                    android:background="@drawable/big_grey_btn" />

                <Button
                    android:text="تحديث "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buAccountSubmit"
                    android:layout_weight="1"
                    android:background="@drawable/blue_btn_bkg"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">


                <Button
                    android:text="أضافة اعلان"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buAddAdvertisements"
                    android:layout_weight="1"
                    android:background="@drawable/blue_btn_bkg"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="تسجيل الخروج"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buLogoutAccount"
                    android:layout_weight="1"
                    android:background="@drawable/big_grey_btn" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>